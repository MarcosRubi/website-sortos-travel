---
import HeaderSections from "../HeaderSections.astro";
---

<section class="newsletter relative">
  <div class="gradient"></div>
  <div class="container flex flex-col flex-row-lg items-center justify-center relative">
    <div class="content">
      <HeaderSections
        subtitle="Somos más que una agencia"
        title="Suscríbete para recibir consejos de viajes, noticias y más!"
        isTitleFirst={false}
      />
    </div>
    <div class="form w-full">
      <form
        action="#"
        method="POST"
        onsubmit="return false;"
      >
      <div class="flex items-center justify-center form__content ">
        <div class="form-group">
          <input type="email" id="email" required class="w-full"/>
          <label for="email">Ingresa tu correo</label>
        </div>
        <input type="submit" value="Suscribirme" class="btn btn-primary" />
      </div>
      </form>
    </div>
  </div>
</section>
