    <form action="#" onsubmit="return false;" class="mx-auto"  >
        <div class="form-content">
        <div class="form-group">
            <input type="text" required class="w-full" id="name">
            <label for="name">Tu nombre*</label>
        </div>
        <div class="form-group">
            <input type="email" id="email" required class="w-full" />
            <label for="email">Correo electrónico*</label>
          </div>
        <div class="form-group">
            <input type="text" id="phone" required class="w-full" />
            <label for="phone">Teléfono*</label>
          </div>
        <div class="form-group">
            <textarea name="subject" id="subject" cols="30" rows="5" class="w-full" required></textarea>
            <label for="subject">Mensaje*</label>
          </div>
        </div>
          <button type="submit" class="btn btn-primary">Enviar mensaje</button>
    </form>
